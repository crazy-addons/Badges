Scroll {
   width: 100%;
   height: 100%;

   .grid-widget {
      top: 0;
      left: 0;
      height: fit-content;
      width: 100%;
   }

   Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-left: 5;
   }
}

Badge {
   hover-box-delay: 1000;

   .badge-icon {
      alignment-x: center;
      top: 30%;
      height: 32;
      width: 32;
   }

   .badge-title {
      alignment-x: center;
      top: 75%;
   }
}